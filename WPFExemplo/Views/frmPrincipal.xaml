<Window x:Name="frmPrincipal1" x:Class="WPFExemplo.Views.frmPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFExemplo.Views"
        mc:Ignorable="d"
        Title="Tela Principal" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtMensagem" HorizontalAlignment="Left" Height="23" Margin="82,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TxtMensagem_TextChanged"/>
        <Button x:Name="btnMensagem" Content="Mensagem" HorizontalAlignment="Left" Margin="221,87,0,0" VerticalAlignment="Top" Width="76" Click="BtnMensagem_Click"/>
        <Label Content="Mensagem" HorizontalAlignment="Left" Margin="82,53,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
